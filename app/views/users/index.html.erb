<div class="btn btn-danger active" id="view_commuting_barbers">View barbers that are willing to commute to your location</div>
<div class="btn btn-primary active" id="view_hosting_barbers">View barbers that provide their service at their own location next to you</div>

<% @users.each do |user| %>
<p class="barber-search-result<%= ' commuting-barber' if user.commute_area_address %><%= ' hosting-barber' if user.host_service_address %>"><%= link_to user.name, user_path(user) %></p>
<% end %>

<% unless @markers.empty? %>
  <div
    id="map"
    style="width: 500px;
    height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
<% end %>
