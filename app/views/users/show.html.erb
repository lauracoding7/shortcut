<div class="container">
  <div class="dashboard-card">
    <h1 class="centered"><%= @user.name %></h1>

    <!-- these below will have to be service cards -->
    <ul class="list-inline tabs-underlined">
  <li>
    <a href="#" class="tab-underlined active">Profile</a>
  </li>
  <li>
    <a href="#" class="tab-underlined">Reviews</a>
  </li>
</ul>

    <p class="centered-p"><%= @user.name %> reviews:</p>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
    </div>

    <div class="item">
    </div>

    <div class="item">
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

    <ul class="reviews-list">
      <% unless @reviews.empty? %>
      <% @reviews.each do |review| %>
      <li>
       <div class="reviews">
        <strong>  <%= review.author.name %> </strong>- Rating: <%= review.rating %>/5<br>
        <%= review.content %>
      </div>
    </li>
    <% end %>
    <% end %>
  </ul>

  <% if @marker %>
  <div
  id="map"
  style="width: 500px;
  height: 255px;
  box-shadow: 0 0 15px rgba(255,255,255,0.4);
  "
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  <% end %>
</div>


<div class="content">
  <div>
    <% @user.services.each do |service| %>
    <%= render partial: "service-card", locals: {user: @user, service: service} %>
    <% end %>
  </div>

</div>
</div>

