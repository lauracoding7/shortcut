<div class="container">
  <div class="card">
  <h1 class="centered"><%= @user.name %></h1>

  <!-- these below will have to be service cards -->
  <p class="centered-p"><%= @user.name %> offers:</p>
  <div class="content">
    <div>
      <% @user.services.each do |service| %>
      <%= render partial: "service-card", locals: {user: @user, service: service} %>
      <% end %>
    </div>


    <% if @marker %>
    <div
    id="map"
    style="width: 500px;
    height: 255px;
    box-shadow: 0 0 15px rgba(255,255,255,0.4);
    "
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    <% end %>
  </div>


  <ul class="reviews-list">
    <% unless @reviews.empty? %>
    <% @reviews.each do |review| %>
    <li>
     <div class="reviews">
      <strong>  <%= review.author.name %> </strong>- Rating: <%= review.rating %>/5<br>
      <%= review.content %>
    </div>
  </li>
  <% end %>
  <% end %>
</ul>
</div>
</div>

