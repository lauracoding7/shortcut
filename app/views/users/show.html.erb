<div class="container">
  <div class="card">
  <h1 class="centered"><%= @user.name %></h1>

  <!-- these below will have to be service cards -->
  <p class="centered-p"><%= @user.name %> offers:</p>
  <div class="content">
    <div>
      <% @user.services.each do |service| %>
      <%= render partial: "service-card", locals: {user: @user, service: service} %>
      <% end %>
    </div>


<% if @marker %>
<div
id="map"
style="width: 500px;
height: 500px;"
data-markers="<%= @marker.to_json %>"
data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<% end %>

<!-- these should end up in a caroussel which shows one review at a time -->
<% unless @reviews.empty? %>
<div class="review-cards">
  <% @reviews.each do |review| %>
  <%= render partial: "reviews/review-card", locals: {review: review} %>
  <% end %>
</div>
<% end %>
<% end %>


<% if controller_name == 'reviews' %>
<%= render partial: "reviews/index" %>
<% end %>
