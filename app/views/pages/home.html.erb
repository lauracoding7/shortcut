<div class="banner">
  <div class="search-container">
    <%= form_tag users_path, method: :get, id: 'search_form' do %>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Type a location or a barber name" %>
    <%= button_tag 'Search', class: 'btn btn-blue', id: 'search_button' %>
    <% end %>
  </div>
</div>

<div class="wrapper">
  <h1 class="centered">Great barbers are all around you</h1>
  <p class="centered-p" >By using our website, you'll be able to discover if barbers are available around your area, just type in your address or the name of a barber you know</p>
  <div class="icons">
    <i class="fas fa-map-marker-alt"></i>
    <i class="fas fa-user"></i>
  </div>
</div>


