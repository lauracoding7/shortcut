<div class="banner" style="background-image: linear-gradient(rgba(22,26,38,0.6),rgba(22,26,38,0.6)), url('<%= image_url("cover.png") %>');">
  <div>
    <h1>Good barbers are all around you</h1>
    <%= form_tag users_path, method: :get, id: 'search_form' do %>
    <span class="fas fa-map-marker-alt"></span>
    <%= text_field_tag :query, params[:query], class: "form-control icon", placeholder:" City or barber" %>

    <%= button_tag 'Search', class: 'shortcut-btn', id: 'search_button' %>
    <% end %>
  </div>
</div>

